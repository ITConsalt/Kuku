@model Kuku.ViewModels.FilterViewModel

@{
    ViewData["Title"] = "Welcome to the Recipe base";
}

<div class="row">
    <div class="col-2">
        <h3>Filter:</h3>

        @*<form class="form-inline">*@
        @*<input class="form-control mr-sm-2" type="search" placeholder="Search product" aria-label="Search">*@
        @*<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>*@

        <div class="card top-filter-product border-light mb-3">
            <h5 class="card-title">Popular products:</h5>
            <div class="list-group list-group-flush">
                @foreach (var item in Model.TopFilterProduct)
                {
                    <a href="@item.itemLink" title="@item.itemName" class="list-group-item @item.itemChecked">
                        @item.itemName
                        <span class="badge badge-pill badge-secondary">@item.itemCount</span>
                    </a>
                }
            </div>
        </div>
        <div class="panel-group">
            @foreach (var filter in Model.Recipe_Filters)
            {
                <div class="panel filter-product">
                    @if (filter.itemsCount > 3)
                    {
                        <h6 class="panel-title btn" data-toggle="collapse" data-target="#@filter.itemMD5" title="@filter.itemType">
                            @filter.itemType:
                            <span class="caret"></span>
                        </h6>
                    }
                    else
                    {
                        <h6 class="panel-title" data-target="#@filter.itemMD5" title="@filter.itemType">
                            @filter.itemType:
                        </h6>

                    }
                    <div id="@filter.itemMD5" class="panel-collapse collapse @filter.itemClass">
                        <div class="list-group">
                            @foreach (var item in filter.items)
                            {
                                <a href="@item.itemLink" title="@item.itemName" class="list-group-item @item.itemChecked">
                                    @item.itemName
                                    <span class="badge badge-pill badge-secondary">@item.itemCount</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-8">
        <h2>Recipes (@Model.PageInfo.TotalItems)</h2><br />
        <div class="btn-group">
            <!-- pager -->
            @if (Model.PageInfo.EndPage > 1)
            {
                <ul class="pagination">
                    @if (Model.PageInfo.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Model.PageInfo.urlFirst">First</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Model.PageInfo.urlPage@(Model.PageInfo.CurrentPage - 1)">Previous</a>
                        </li>
                    }

                    @for (var page = Model.PageInfo.StartPage; page <= Model.PageInfo.EndPage; page++)
                    {
                        <li class="page-item @(page == Model.PageInfo.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@(page == 1 ? Model.PageInfo.urlFirst : (Model.PageInfo.urlPage + page))">@(page)</a>
                        </li>
                    }

                    @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Model.PageInfo.urlPage@(Model.PageInfo.CurrentPage + 1)">Next</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Model.PageInfo.urlPage@(Model.PageInfo.TotalPages)">Last</a>
                        </li>
                    }
                </ul>
            }
        </div>
        @foreach (var item in Model.Recipes)
        {
            <div class="card mb-4 shadow bg-white rounded">
                <div class="card-header list-group-item-action active ">
                    <a asp-action="DetailsRecipe" asp-controller="Home" asp-route-id="@item.RecipeId">@item.RecipeName</a>
                    <span class="float-right text-muted small">@item.CreatedDate.ToString("yyyy.MM.dd")</span>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-row bd-highlight mb-3">
                        <div>
                            @if (item.PreviewImageData != null)
                            {
                                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.PreviewImageData))" class="rounded float-left" />
                            }
                        </div>
                        <div class="p-2 bd-highlight">
                            @item.Description
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-action="EditRecipe" asp-controller="Recipe" asp-route-id="@item.RecipeId">Edit</a>
                                <a asp-action="DeleteRecipe" asp-controller="Recipe" asp-route-id="@item.RecipeId">Delete</a>
                            }
                        </div>
                    </div>
                </div>

            </div>
        }
        <div class="btn-group">
            <!-- pager -->
            @if (Model.PageInfo.EndPage > 1)
            {
                <ul class="pagination">
                    @if (Model.PageInfo.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Model.PageInfo.urlFirst">First</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Model.PageInfo.urlPage@(Model.PageInfo.CurrentPage - 1)">Previous</a>
                        </li>
                    }

                    @for (var page = Model.PageInfo.StartPage; page <= Model.PageInfo.EndPage; page++)
                    {
                        <li class="page-item @(page == Model.PageInfo.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@(page == 1 ? Model.PageInfo.urlFirst : (Model.PageInfo.urlPage + page))">@(page)</a>
                        </li>
                    }

                    @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Model.PageInfo.urlPage@(Model.PageInfo.CurrentPage + 1)">Next</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Model.PageInfo.urlPage@(Model.PageInfo.TotalPages)">Last</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
    <div class="col-2">
        <h2>Google AdSense</h2>
        <ul>
            <li><a href="https://support.google.com/adsense#topic=1250106">Mediapartner</a></li>
        </ul>
    </div>
</div>
