@model IEnumerable<Kuku.Models.Recipe>

@{
    ViewData["Title"] = "Welcome to the Recipe base";
}

@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>

    <form method="post" asp-controller="Account" asp-action="LogOff">
        <input type="submit" value="Log off" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Login</a>
    <a asp-controller="Account" asp-action="Register">Registration</a>
}

<a asp-action="CreateRecipe">Create recipe</a>

<table class="table">
    <tr>><td>id</td><td>name</td><td>Description</td><td>CreatedDate</td><td>BigImageData</td><td>PreviewImageData</td></tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Recipeid</td>
        <td>@item.RecipeName</td>
        <td>@item.Description</td>
        <td>@item.CreatedDate</td>
        <td>
            @if (item.BigImageData != null)
            {
                <img style='width:640px; height:480px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.BigImageData))" />
            }
        </td>
        <td>
            @if (item.PreviewImageData != null)
            {
                <img style='width:320px; height:240px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.PreviewImageData))" />
            }
        </td>

    </tr>
    }
</table>
