@model IEnumerable<Kuku.Models.Recipe>

@{
    ViewData["Title"] = "Welcome to the Recipe base";
}

@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>

    <form method="post" asp-controller="Account" asp-action="LogOff">
        <input type="submit" value="Log off" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Login</a>
    <a asp-controller="Account" asp-action="Register">Registration</a>
}

<table class="table">
    <tr>><td>id</td><td>name</td><td>Description</td><td>CreatedDate</td><td>BigImageData</td></tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.RecipeId</td>
        <td>@item.RecipeName</td>
        <td>@item.Description</td>
        <td>@item.CreatedDate</td>
        <td>
            @if (item.BigImageData != null)
            {
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.BigImageData))" />
            }
            <a asp-action="DetailsRecipe" asp-controller="Home" asp-route-id="@item.RecipeId">Details</a> |
        </td>
    </tr>
    }
</table>
