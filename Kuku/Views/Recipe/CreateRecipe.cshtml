@model Kuku.Models.SP_Recipe
@{
    ViewData["Title"] = "Create recipe";
}
<form asp-action="CreateRecipe" asp-controller="Recipe" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="RecipeName" class="control-label">Name</label>
        <input type="text" asp-for="RecipeName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label>Выберите изображение</label>
        <input name="uploadedFile" type="file" class="form-control-file" />
    </div>

    @*<div class="form-group custom-file mb-3">
        <input name="uploadedFile" type="file" class="custom-file-input" id="customFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>*@
    <p>
        <input type="submit" value="Create recipe" />
    </p>
</form>
